{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.1.2",
  "default_locale": "en",
  "description": "__MSG_appDesc__",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://pbs.twimg.com/*"
  ],
  "action": {
    "default_title": "X-Puzzle-Kit",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "src/content/index.ts"
      ],
      "css": [
        "src/content/style.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ]
}
